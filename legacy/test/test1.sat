n = 2;
l = 2;
nt = 2;

P(n,l);
R(n,nt);
M(n,n);

optgroup custo:
forall{i,j} where i in (1,n), j in (1,l) :
    nt(P[i][j]);

optgroup custo:
forall{i,j} where i in (1,n), b in (1,nt) :
    nt(R[i][b]);

optgroup custo:
forall{i,j} where i in (1,n), j in (1,n) and i != j:
    nt(M[i][j]);

penalties:
  custo: level 0, correlation 1;
